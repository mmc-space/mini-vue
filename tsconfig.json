{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist", // 输出的目录
    "sourceMap": true,
    "target": "ES2016", // 目标语法
    "module": "ESNext", // 模块格式
    "moduleResolution": "node", // 模块解析方式
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true, // 允许通过es6 语法引入 commonjs模块
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"], // 支持的类库
    "rootDir": ".",
    "paths": {
      "@vue/*": ["packages/*/src"],
    }
  },
  "include": [
    "packages/*/src"
  ]
}